---
const bagflex = "/icons/bagflex.svg";
const facenovel = "/icons/FaceNovel.svg";
const ustube = "/icons/UsTube.svg";
const shoogle = "/icons/Shoogle.svg";
const Thisknee = "/icons/Thisknee.svg";

const brandsList = [
  bagflex,
  facenovel,
  shoogle,
  Thisknee,
  ustube
];
---

<div class="px-4 pt-4 pb-6 bg-white">
  <div class="text-center py-4 text-gray-800">
    <h5 class="font-semibold">TRUSTED BY THE MOST SHADY COMPANIES</h5>
  </div>

  <div class="grid grid-cols-3 md:grid-cols-5 max-w-[700px] m-auto">
    {
      brandsList.map(brand => {
        return <div class="py-4 flex justify-center">
          <img src={brand} class="w-[80px]"/>
        </div>
      })
    }
  </div>
</div>