<style>
  .slide_left {
    box-shadow: inset 0 0 0 0 #333333;
    transition: ease-out 0.4s;
  }

  .slide_left:hover {
    box-shadow: inset 400px 0 0 0 rgba(51, 51, 51, 1);
    color: white !important;
  }

  @media screen and (max-width: 769px) {
    .slide_left:hover {
      box-shadow: inset 700px 0 0 0 rgba(51, 51, 51, 1);
    }
  }

  .slide_left img {
    transition: ease-out 0.5s;
  }

  .slide_left:hover img {
    filter: invert(1);
  }
</style>
<div class="container-fluid bg-gradient-to-r from-[#F4D7FF] to-[#D4E8FF] min-h-[240px] flex justify-center relative z-20 mt-[-80px]">
  <div class="container m-auto">

    <div class="px-8 md:px-4 py-12">
      <div class="pb-4 max-w-[850px] text-gray-800">
        <h2>Discover what ScamAi can offer your business and how we can support your needs.</h2>
      </div>
    
      <div class="grid grid-cols-1 md:grid-cols-3 py-4 gap-6 md:gap-2">
        <div class="border border-2 border-[#333333] py-4 px-4 mr-4 flex flex-row md:flex-col lg:flex-row justify-between hover:cursor-pointer slide_left goHome">
          <h4>Book a Demo</h4>
          <img class="pt-3 lg:pt-0" src="/icons/arrowRight.svg" style="width:50px" />
        </div>
    
        <div class="border border-2 border-[#333333] py-4 px-4 mr-4 flex flex-row md:flex-col lg:flex-row justify-between hover:cursor-pointer slide_left goHome">
          <h4>Investor Relations</h4>
          <img class="pt-3 lg:pt-0" src="/icons/arrowRight.svg" style="width:50px" />
        </div>
    
        <div class="border border-2 border-[#333333] py-4 px-4 mr-4 flex flex-row md:flex-col lg:flex-row justify-between hover:cursor-pointer slide_left goHome">
          <h4>Documentation</h4>
          <img class="pt-3 lg:pt-0" src="/icons/arrowRight.svg" style="width:50px" />
        </div>
      </div>
    </div>

  </div>
</div>

<script>
  const buttons = document.querySelectorAll('.goHome');

  buttons.forEach((button) => {
    button.addEventListener('click', () => {
      window.location.href = "/about"
    });
  });
</script>