---
const { pageTitle } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Neuton:ital,wght@0,300;0,400;0,700;1,400&family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <title>{pageTitle}</title>
  </head>
  <body> 
    <slot />
  </body>
</html>
<style is:global>
	html, body {
		font-family: system-ui, sans-serif;
    opacity: 0;
    overflow-x: hidden;
    animation: fadeIn 1s ease-in forwards;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

  @keyframes fadeIn {
    0% {
      opacity: 0; /* Fully transparent */
    }
    100% {
      opacity: 1; /* Fully visible */
    }
  }

  .magic {
    background: linear-gradient(
      135deg,
      #fdfcfb,  /* Soft white */
      #e3f2fd,  /* Light sky blue */
      #d7e8f7,  /* Cool pastel blue */
      #f5e6fa,  /* Gentle lavender */
      #ffe5d9,  /* Light peach */
      #ffffd4   /* Soft cream */
    );
    
    background-size: 400% 400%; /* Enlarges the gradient for smooth transitions */
    animation: gradientAura 20s ease infinite; /* Slower, smoother transitions */
  }

  @keyframes gradientAura {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .container {
    max-width: 1200px;
  }

  h1, h2, h3, h4, h5, p {
    font-family: "Poppins", sans-serif;
  }

  small {
    font-size: 12px;
  }

  h1 {
    font-size: 40px;
  }

  h2 {
    font-size: 32px;
    font-weight: 500;
  }

  h3 {
    font-size: 26px;
    font-weight: 700;
  }

  h4 {
    font-size: 21px;
  }

  h5 {
    font-size: 17px;
  }

  p {
    font-size: 18px;
    font-weight: 400;
  }

  li p {
    font-weight: lighter;
    font-size: 16px;
  }

</style>